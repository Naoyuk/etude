<div class='my-4'>
  <div class="grid gap-4 grid-cols-6 border-b-2 border-gray-600">
    <div class="m-2">
      <%=  order.order_date %>
    </div>
    <div class="m-2">
      <%=  order.customer.name %>
    </div>
    <div class="m-2">
      <%=  order.customer.address1 %>
    </div>
    <div class="m-2">
      <%=  order.customer.address2 %>
    </div>
    <div class="m-2">
      <%= link_to 'Show', order_path(order), class: 'px-2 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-yellow-500' %>
    </div>
    <div class="m-2">
      <%= link_to 'Edit', edit_order_path(order), class: 'px-2 py-1 bg-yellow-400 text-white font-semibold rounded hover:bg-yellow-500' %>
    </div>
</div>
